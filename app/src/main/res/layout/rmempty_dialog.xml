<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Hb0000000"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="500px"
        android:layout_height="@dimen/H250px"
        android:layout_marginLeft="100px"
        android:layout_marginRight="100px"
        android:background="@drawable/bac_kdempty_dialog"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="169px"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:gravity="center"
                android:text="提示"
                android:textColor="@color/H000000"
                android:textSize="@dimen/H30px" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="5px" />

            <TextView
                android:id="@+id/tv_message"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:gravity="center"
                android:singleLine="true"
                android:text="确定要清空缓存么？"
                android:textColor="@color/H000000"
                android:textSize="@dimen/H23px" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/Hc7c7c7" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_kdempty_dialog_left"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/H007aff"
                android:textSize="@dimen/H30px" />

            <TextView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/Hc7c7c7" />

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_kdempty_dialog_right"
                android:gravity="center"
                android:text="确认"
                android:textColor="@color/H007aff"
                android:textSize="@dimen/H30px" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>