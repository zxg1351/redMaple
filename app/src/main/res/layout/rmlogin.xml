<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/HFFFFFF"
    android:gravity="center|top"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/H88px"
        android:background="@color/HFFFFFF"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="@dimen/H0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left" >

                <ImageView
                    android:id="@+id/ic_back"
                    android:layout_width="@dimen/H49px"
                    android:layout_height="@dimen/H43px"
                    android:layout_marginLeft="@dimen/H20px"
                    android:background="@mipmap/ic_add" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="登录"
                    android:textSize="@dimen/H32px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/H1px"
            android:background="#c7c7c7" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/H30px" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/H177px"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/H20px"
            android:layout_marginRight="@dimen/H20px"
            android:background="@drawable/bac_kd002"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/H0px"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="@dimen/H78px"
                    android:layout_height="match_parent"
                    android:gravity="center" >

                    <ImageView
                        android:layout_width="@dimen/H30px"
                        android:layout_height="@dimen/H39px"
                        android:background="@mipmap/ic_people" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/H0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <EditText
                        android:id="@+id/ed_userId"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/H10px"
                        android:background="@null"
                        android:hint="请输入用户名"
                        android:maxLength="32"
                        android:singleLine="true"
                        android:textColorHint="@color/Hc7c7c7"
                        android:textSize="@dimen/H25px" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/H1px"
                android:layout_marginLeft="@dimen/H20px"
                android:layout_marginRight="@dimen/H20px"
                android:background="@color/Hc7c7c7" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/H0px"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="@dimen/H78px"
                    android:layout_height="match_parent"
                    android:gravity="center" >

                    <ImageView
                        android:layout_width="@dimen/H30px"
                        android:layout_height="@dimen/H39px"
                        android:background="@mipmap/ic_lock" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/H0px"
                    android:layout_height="match_parent"
                    android:layout_weight="2" >

                    <EditText
                        android:id="@+id/ed_passWord"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/H10px"
                        android:background="@null"
                        android:hint="请输入密码"
                        android:maxLength="18"
                        android:password="true"
                        android:singleLine="true"
                        android:textColorHint="@color/Hc7c7c7"
                        android:textSize="@dimen/H25px" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lyt_forget_wd"
                    android:layout_width="@dimen/H0px"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center|right" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10px"
                        android:text="忘记密码"
                        android:textColor="@color/H5883f0"
                        android:textSize="@dimen/H23px" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/H120px"
        android:gravity="top"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/checkbox"
            style="@style/CustomCheckBoxTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/H55px"
            android:layout_marginLeft="@dimen/H20px"
            android:layout_marginTop="@dimen/H26px"
            android:text=" 记住密码"
            android:textColor="@color/H6e6e6e"
            android:textSize="@dimen/H23px" />

        <TextView
            android:layout_width="@dimen/H0px"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/H55px"
            android:layout_marginRight="@dimen/H30px"
            android:layout_marginTop="@dimen/H26px"
            android:text="注册"
            android:textColor="#f10e50"
            android:textSize="@dimen/H23px" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/H416px"
        android:gravity="top|center" >

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="@dimen/H580px"
            android:layout_height="@dimen/H66px"
            android:layout_marginLeft="@dimen/H52px"
            android:layout_marginRight="@dimen/H52px"
            android:background="@drawable/btn_login"
            android:gravity="center"
            android:text="登录"
            android:textColor="@color/HFFFFFF"
            android:textSize="@dimen/H30px" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyt_colsewxlogin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/H0px"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/H38px"
            android:gravity="left"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/H20px"
                android:text="其他登录方式"
                android:textColor="@color/Hbdbdbd"
                android:textSize="@dimen/H23px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/H0px"
                android:layout_weight="1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/H1px"
                android:layout_marginLeft="@dimen/H20px"
                android:layout_marginRight="@dimen/H20px"
                android:background="@color/Hf0f0f0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/H0px"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_wxLogin"
                android:layout_width="@dimen/H108px"
                android:layout_height="@dimen/H108px"
                android:background="@mipmap/ic_launcher" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/H10px"
                android:text="微信登录"
                android:textSize="@dimen/H23px" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>